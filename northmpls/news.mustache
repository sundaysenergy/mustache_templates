<!doctype html>
<html>
<head>
  <title>test</title>
  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" />

  <style>
    h4 {
      font-family: "proxima-nova", Helvetica, Arial, sans-serif;
      font-size: 28px;
      font-weight: 300;
      color: #23323f;
      margin: 5px 0 10px 0;
      line-height: 26px;
    }
    h4 a {
      color: #d53708;
    }
    h4 a:hover {
      color: #0b5b87;
      text-decoration: none;
    }
    a {
      text-decoration: none;
    }
    img {
      display: block;
      float: left;
      margin-right: 16px;
      opacity: .9;
    }
    ul {
      list-style-type: none;
    }
    li {
      display: list-item;
    }
    img:hover {
      opacity: 1;
    }
    div.item {
      border-bottom: 1px solid #CCC;
    }
    .readMore .button-small {
      -webkit-border-radius: 0;
      -moz-border-radius: 0;
      -o-border-radius: 0;
      border-radius: 0;
      border: none;
      background: url(https://s3.amazonaws.com/assets.ngin.com/site_files/3702/i/readMore.png) right center no-repeat;
      text-shadow: none;
      font-family: "proxima-nova", Helvetica, Arial, sans-serif;
      font-weight: 500;
      color: #fff;
      padding-left: 8px;
      padding-right: 8px;
      padding-top: 4px;
      padding-bottom: 4px;
      text-transform: uppercase;
      font-size: 12px;
    }
  </style>
</head>
<!-- Template version 1.11 -->
<body>
{{#hits.hits}}
  <div class="item row">
    <div class="span2">
      {{#_source.cape_io.picture}}
      <a href="{{_source.link}}" title="{{_source.message}}" class="picture">
        <img class="img-circle" alt="{{_source.name}}" src="http://{{_source.cape_io.picture.host}}.img.labori.us/c75x75/{{_source.cape_io.picture.path}}" width="75" height="75" />
      </a>
      {{/_source.cape_io.picture}}
    </div>
    <div class="span10">
      <ul class="details">
        <li>
          <h4><a href="{{_source.link}}" class="">{{_source.name}}</a></h4>
        </li>
        <li class="dateAuthor">
          {{_source.created_time}}<span class="expandedView">, {{_source.caption}}</span>
        </li>
        <li class="teaser expandedView">
          {{_source.description}}
        </li>
        <li class="commentsAndMore expandedView">
          <span class="readMore">
            <a href="{{_source.link}}" class="button-small">Read More</a>
          </span>
        </li>
      {{#cape_io.admin}}
        <li class="message">
          {{_source.message}}
        </li>
        <li>
          <a href="http://cape.webscript.io/flag?action=added&index={{_index}}&type={{_type}}&id={{_id}}&list={{cape_io.list}}&api_key={{cape_io.api_key}}&user={{cape_io.user}}">Approve</a> -
          <a href="http://cape.webscript.io/flag?action=removed&index={{_index}}&type={{_type}}&id={{_id}}&list={{cape_io.list}}&api_key={{cape_io.api_key}}&user={{cape_io.user}}">Remove</a>
        </li>
      {{/cape_io.admin}}
      </ul>
    </div>
  </div>
{{/hits.hits}}

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>

{{#cape_io.admin}}
  <ul>
  <li>
    <a href="http://cape.webscript.io/compile?list={{cape_io.list}}&api_key={{cape_io.api_key}}&user={{cape_io.user}}&container=cdn.northmpls.org" title="COMPILE!">COMPILE</a>
  </li>
  <li>
    <a href="http://admin.cape.io/feed/{{cape_io.list}}?list_type=preview" title="PREVIEW!">PREVIEW</a>
  </li>

{{/cape_io.admin}}

<!-- ! COMPILED TIME {{ cape_io.timestring }} !-->
</body>
</html>
